      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Development mode - OPEN ACCESS (Change for production!)
    // Uncomment this for initial testing:
    match /{document=**} {
      allow read, write: if true;
    }
    
